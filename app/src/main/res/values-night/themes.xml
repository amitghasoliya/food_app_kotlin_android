    <style name="Base.Theme.FoodApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">#424242</item>
        <item name="android:textColorHint">#CDCDCD</item>
        <item name="colorSecondaryContainer">#f0f0f0</item>
